# Database
# For SQLite, use a relative path to the data directory
DATABASE_URL="file:../../../data/food-pantry.db"

# Server configuration
PORT=3000
NODE_ENV=development

# OpenAI Configuration
OPENAI_API_KEY="your-api-key-here"
OPENAI_MODEL="gpt-4"  # Options: "gpt-4" or "gpt-3.5-turbo"

# Translation Configuration
DEFAULT_LANGUAGE="en"
# Supported languages: Spanish, Russian, Ukrainian, Chinese, Vietnamese, Korean, Arabic
SUPPORTED_LANGUAGES=["es","ru","uk","zh","vi","ko","ar"]

# Image Storage Configuration
UPLOAD_PATH="../../../assets/images/original"
THUMBNAIL_PATH="../../../assets/images/thumbnails"
MAX_FILE_SIZE="5242880"  # 5MB in bytes
ALLOWED_FILE_TYPES=["image/jpeg","image/png","image/webp"]

# Note: This is an example configuration file.
# 1. Copy this file and rename it to '.env'
# 2. Replace placeholder values with your actual configuration
# 3. Never commit your actual .env file to version control
# 4. Ensure all required variables are set before running the application